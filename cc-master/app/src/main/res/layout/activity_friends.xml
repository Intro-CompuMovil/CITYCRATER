<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsActivity">

    <LinearLayout
        android:id="@+id/upperBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@color/seaGreen">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="@string/citycrater"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textColor="@color/black">
        </TextView>

        <ImageButton
            android:id="@+id/btnReports"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@color/seaGreen"
            app:srcCompat="@drawable/sobre"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/seaGreen"
            app:srcCompat="@drawable/usuario"
            android:scaleType="centerInside" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@+id/upperBar"
        android:layout_above="@+id/navBar">

        <org.osmdroid.views.MapView
            android:id="@+id/osmMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </org.osmdroid.views.MapView>

        <LinearLayout
            android:id="@+id/radioLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@color/whiteTransparent">
            <EditText
                android:id="@+id/radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_corner"
                android:backgroundTint="#91C1BD"
                android:textAlignment="center"
                android:hint="Radio de bÃºsqeda"
                android:inputType="text"
                android:imeOptions="actionSend">
            </EditText>

        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/seaGreen"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageButton
            android:id="@+id/btnReportBump"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="0.3"
            android:background="@color/seaGreen"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/advertencia" />

        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="0.3"
            android:background="@color/seaGreen"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/location" />

        <ImageButton
            android:id="@+id/btnFriends"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="0.3"
            android:background="@color/seaGreen"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/equipo" />

    </LinearLayout>


</RelativeLayout>